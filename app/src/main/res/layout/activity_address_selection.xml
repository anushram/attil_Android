<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="Address"
            type="com.develop.sns.address.AddressViewModel" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/root_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/md_grey_50"
            android:orientation="vertical"
            android:visibility="visible"
            tools:context=".cart.CartItemActivity">

            <include
                android:id="@+id/ln_toolbar"
                layout="@layout/app_toolbar" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <include
                    android:id="@+id/ln_error"
                    layout="@layout/custom_error_snackbar"
                    android:visibility="gone" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        app:cardBackgroundColor="@color/md_pink_50"
                        app:cardCornerRadius="2dp"
                        app:cardUseCompatPadding="true">

                        <LinearLayout
                            android:id="@+id/ln_info"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="start|center"
                                android:orientation="horizontal"
                                android:padding="10dp">

                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:src="@drawable/bell" />

                                <TextView
                                    android:id="@+id/tv_total_amount"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="15dp"
                                    android:fontFamily="@font/noto_sans_bold"
                                    android:text=""
                                    android:textColor="@color/text_color"
                                    android:textSize="16sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="start|center"
                                android:orientation="horizontal"
                                android:padding="10dp">

                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:src="@drawable/bell" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="15dp"
                                    android:orientation="vertical">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:fontFamily="@font/noto_sans_bold"
                                            android:text="@string/delivery_charge"
                                            android:textColor="@color/text_color"
                                            android:textSize="16sp" />

                                        <TextView
                                            android:id="@+id/tv_delivery_charge"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginStart="3dp"
                                            android:fontFamily="@font/noto_sans_bold"
                                            android:text=""
                                            android:textColor="@color/accent"
                                            android:textSize="16sp" />

                                    </LinearLayout>

                                    <TextView
                                        android:id="@+id/tv_delivery_charge_info"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="4dp"
                                        android:fontFamily="@font/noto_sans_regular"
                                        android:text=""
                                        android:textColor="@color/text_color"
                                        android:textSize="13sp" />

                                </LinearLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="start|center"
                                android:orientation="horizontal"
                                android:padding="10dp">

                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:src="@drawable/bell" />

                                <TextView
                                    android:id="@+id/tv_packing_charges"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="20dp"
                                    android:fontFamily="@font/noto_sans_bold"
                                    android:text=""
                                    android:textColor="@color/text_color"
                                    android:textSize="16sp" />
                            </LinearLayout>

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/noto_sans_bold"
                            android:text="@string/delivery_to"
                            android:textColor="@color/text_color"
                            android:textSize="16sp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="8dp"
                            android:background="@drawable/boundary_gray"
                            android:padding="10dp">

                            <RadioButton
                                android:id="@+id/rb_local"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="?selectableItemBackground"
                                android:drawableTint="@color/text_color"
                                android:fontFamily="@font/noto_sans_bold"
                                android:gravity="start|center"
                                android:text="@string/use_current_location"
                                android:textColor="@color/text_color"
                                android:textSize="15sp" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/tv_address"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="4dp"
                            android:fontFamily="@font/noto_sans_regular"
                            android:text="Tirunelveli, TamilNadu, 627011, India"
                            android:textColor="@color/text_color"
                            android:textSize="13sp"
                            android:visibility="gone" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="8dp"
                            android:fontFamily="@font/noto_sans_semi_bold"
                            android:text="@string/or"
                            android:textColor="@color/text_color"
                            android:textSize="16sp" />

                        <Button
                            android:id="@+id/btn_add_address"
                            style="@style/ButtonNormal"
                            android:layout_width="wrap_content"
                            android:layout_gravity="center"
                            android:paddingStart="38dp"
                            android:paddingTop="8dp"
                            android:paddingEnd="38dp"
                            android:paddingBottom="8dp"
                            android:text="@string/add_new_address" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <com.develop.sns.customviews.CustomRecyclerView
                            android:id="@+id/lv_products"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:overScrollMode="never"
                            android:scrollbars="vertical"
                            android:scrollingCache="false"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/tv_no_data"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:fontFamily="@font/noto_sans_bold"
                            android:gravity="center"
                            android:text="@string/no_address_found"
                            android:textColor="@color/text_color"
                            android:textSize="15sp"
                            android:visibility="gone" />
                    </LinearLayout>
                </LinearLayout>

                <androidx.coordinatorlayout.widget.CoordinatorLayout
                    android:id="@+id/coordinator_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true">

                    <com.google.android.material.bottomnavigation.BottomNavigationView
                        android:id="@+id/bottom_nav"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        app:elevation="0dp"
                        app:itemBackground="@color/white">

                        <LinearLayout
                            android:id="@+id/cv_footer"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_gravity="center"
                            android:background="@drawable/bg_shadow"
                            android:orientation="horizontal"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:paddingStart="8dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/noto_sans_regular"
                                    android:text="@string/total_amount"
                                    android:textColor="@color/text_color"
                                    android:textSize="14sp" />

                                <TextView
                                    android:id="@+id/tv_total_price"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/noto_sans_bold"
                                    android:text="\u20B9 0.00"
                                    android:textColor="@color/text_color"
                                    android:textSize="22sp" />
                            </LinearLayout>

                            <Button
                                android:id="@+id/btn_pay_now"
                                style="@style/ButtonNormal"
                                android:layout_width="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginEnd="12dp"
                                android:width="123dp"
                                android:padding="8dp"
                                android:text="@string/pay_now" />
                        </LinearLayout>
                    </com.google.android.material.bottomnavigation.BottomNavigationView>

                </androidx.coordinatorlayout.widget.CoordinatorLayout>

            </RelativeLayout>

        </LinearLayout>

        <include
            android:id="@+id/ln_progressbar"
            layout="@layout/progress_bar_layout"
            android:visibility="gone" />

    </RelativeLayout>
</layout>