<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-5dp"
        app:cardBackgroundColor="@color/item_tile_bg"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        app:cardMaxElevation="5dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:id="@+id/ln_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/iv_product"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/sample"
                    app:riv_border_color="@color/transparent"
                    app:riv_border_width="0dp"
                    app:riv_corner_radius="10dp"
                    app:riv_mutate_background="false"
                    app:riv_oval="false"
                    app:riv_tile_mode="clamp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="5dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_product_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start|center"
                        android:ellipsize="end"
                        android:fontFamily="@font/notosans_bold"
                        android:gravity="start|center"
                        android:maxLines="1"
                        android:text=""
                        android:textColor="@color/text_color"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tv_measure"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:fontFamily="@font/notosans_regular"
                        android:text=""
                        android:textColor="@color/md_grey_700"
                        android:textSize="12sp"
                        android:visibility="visible" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|end|center"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btn_add"
                        style="@style/ButtonChatPlain"
                        android:fontFamily="@font/notosans_bold"
                        android:text="@string/add"
                        android:textAllCaps="true"
                        android:textSize="16sp"
                        android:visibility="visible" />

                    <LinearLayout
                        android:id="@+id/ln_add"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/boundary_no"
                        android:backgroundTint="@color/md_white_1000"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <LinearLayout
                            android:id="@+id/ln_decrease"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_vertical"
                            android:layout_marginEnd="2dp"
                            android:background="@drawable/boundary_primary"
                            android:padding="8dp">

                            <ImageView
                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                android:layout_gravity="center"
                                android:src="@drawable/decrease"
                                app:tint="@color/white" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/tv_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:ems="3"
                            android:focusable="false"
                            android:fontFamily="@font/notosans_bold"
                            android:gravity="center"
                            android:maxLength="4"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:textColor="@color/black"
                            android:textSize="16sp" />

                        <LinearLayout
                            android:id="@+id/ln_increase"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="2dp"
                            android:background="@drawable/boundary_primary"
                            android:padding="8dp">

                            <ImageView
                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                android:layout_gravity="center"
                                android:src="@drawable/increase"
                                app:tint="@color/white" />
                        </LinearLayout>


                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center"
                    android:layout_weight="1"
                    android:gravity="bottom|center"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/ln_boge_main"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:background="@drawable/dash_gradient_line"
                        android:layerType="software"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/dash_gradient"
                            android:orientation="horizontal"
                            android:padding="3dp">

                            <com.develop.sns.customviews.CircleImageView
                                android:id="@+id/iv_boge_brand"
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:layout_gravity="center"
                                android:scaleType="centerInside"
                                android:src="@drawable/profile_picture"
                                android:visibility="visible" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginStart="8dp"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/tv_boge_name"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:ellipsize="end"
                                    android:fontFamily="@font/notosans_semibold"
                                    android:maxLines="2"
                                    android:text="Brand Name"
                                    android:textColor="@color/white"
                                    android:textSize="11sp"
                                    android:visibility="visible" />

                                <TextView
                                    android:id="@+id/tv_boge_qty"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:ellipsize="end"
                                    android:fontFamily="@font/notosans_light"
                                    android:maxLines="1"
                                    android:text="500 GM"
                                    android:textColor="@color/white"
                                    android:textSize="10sp"
                                    android:visibility="visible" />
                            </LinearLayout>

                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_gravity="center"
                                android:layout_marginStart="30dp"
                                android:layout_marginEnd="10dp"
                                android:padding="3dp"
                                android:src="@drawable/free" />
                        </LinearLayout>
                    </LinearLayout>

                    <pl.droidsonroids.gif.GifImageView
                        android:id="@+id/iv_bogo"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_gravity="start"
                        android:src="@drawable/buy"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/tv_offer_percentage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:background="@drawable/boundary_primary"
                        android:ellipsize="end"
                        android:fontFamily="@font/notosans_bold"
                        android:paddingStart="6dp"
                        android:paddingEnd="6dp"
                        android:text="12% OFF"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:visibility="visible" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ln_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|end"
                    android:layout_marginEnd="5dp"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/tv_mrp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:ellipsize="end"
                        android:fontFamily="@font/notosans_regular"
                        android:text=""
                        android:textColor="@color/text_color"
                        android:textSize="12sp"
                        android:visibility="visible" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_save"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:ellipsize="end"
                            android:fontFamily="@font/notosans_semibold"
                            android:gravity="end|center"
                            android:paddingEnd="10dp"
                            android:text=""
                            android:textColor="@color/primary"
                            android:textSize="12sp"
                            android:visibility="visible" />

                        <TextView
                            android:id="@+id/tv_offer_price"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="end"
                            android:ellipsize="end"
                            android:fontFamily="@font/notosans_bold"
                            android:gravity="end|center"
                            android:text=""
                            android:textColor="@color/text_color"
                            android:textSize="16sp"
                            android:visibility="visible" />

                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>