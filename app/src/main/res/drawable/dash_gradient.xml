<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <gradient
                android:angle="225"
                android:centerColor="@color/md_deep_purple_600"
                android:endColor="@color/md_pink_700"
                android:startColor="@color/md_pink_600" />
            <stroke
                android:width="0dp"
                android:color="@color/transparent" />
            <corners android:radius="4dp" />
            <padding
                android:bottom="2dp"
                android:left="2dp"
                android:right="2dp"
                android:top="2dp" />
        </shape>
    </item>
</layer-list>